---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# This is the template for individual blog postsâ€“it builds the front matter properties into the page #}

    {# The post front matter includes the title property #}
<!--     <h1 class='postTitle'>{{title}}</h1> -->

<div class="relative">
  <img src="{{ image }}" class="relative" alt="header image, naoto posing">
  <div class="absolute top-0 w-full h-full flex items-start">
    <h1 class="text-blue-600 font-bold text-2xl sm:text-4xl" style="text-shadow: #fff 1px 0 3px;">
<!--     <h1 class="text-blue-600 font-bold text-4xl" style="text-shadow: #fff 1px 0 3px; max-width: 33%"> -->
    {{ title }}
    </h1>
  </div>
</div>


    {# ADD P ELEMENT FROM TODO ON THE NEXT LINE #}
    
    {# Content from the body of the post markdown appears here #}
    <div class="content">
      {{ content | safe }}
    </div>
    
    <div class="my-4">
    {# The previous and next post data is added in .eleventy.js #}
    {% if prevPost.url %}
      <div>
        <strong>Previous post</strong>: 
        <a class="previous" href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
      </div>
    {% endif %}
    {% if nextPost.url %}
      <div>
        <strong>Next post</strong>: 
        <a class="next" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
      </div>
    {% endif %}
    </div>

    <div class="my-4">
      <div>
        <strong>Photos</strong>: <a href="https://froggohome.com/" target="_blank">Frog Edogawa</a><br />
      </div>
      <div>
        <strong>Concept and Model</strong>: <a href="https://naotohieda.com/" target="_blank">Naoto Hieda</a>
      </div>
    </div>
